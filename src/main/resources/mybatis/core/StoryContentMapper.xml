<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kxai.qms.core.dao.StoryContentDao">

    <!-- 根据故事ID查找故事内容 -->
    <select id="findByStoryId" parameterType="int" resultType="StoryContent">
        SELECT
            story_id AS storyId,
            content
        FROM qms_story_content
        WHERE story_id = #{storyId}
    </select>

    <!-- 保存 -->
    <insert id="save" parameterType="StoryContent">
        INSERT INTO qms_story_content (story_id, content) VALUES (#{storyId}, #{content})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="StoryContent">
        UPDATE qms_story_content
        SET content = #{content}
        WHERE story_id = #{storyId}
    </update>
</mapper>